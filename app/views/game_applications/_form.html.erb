<%= form_for([@game_application.game, @game_application], :remote => true) do |f| %>
  <%= f.error_messages :header_message => "Failed to save application details", :message => "The following problems prevented your details from being saved:" %>

	<%= f.hidden_field :user_id %>
	<%= f.hidden_field :game_id %>

  <p>You are applying to run the game on <%= @game_application.game.date_range %>.</p>

  <div class="fullwidthcolumn">
		<ul class="form">
			<li>
				<%= f.label :reason, "Please enter supporting details for your application." %><br/>
            Click <%= link_to "here", "http://redcloth.org/textile", { :target => '_new' } %> to view markup options. Raw HTML is prohibited.<br />
    		<%= f.text_area :reason %>
			</li>
		</ul>
	</div>

  <div class="multicolumnform">
    <div class="formcolumn">
      <ul class="form">
      <li>
        <%= f.label :title %><br />
        <%= f.text_field :title, { class: "fullwidth" } %>
      </li>

      <li>
        <%= f.label :lower_rank, "Lower Rank in Points" %><br />
        <%= f.text_field :lower_rank %>
      </li>

      <li>
        <%= f.label :upper_rank, "Upper Rank in Points" %><br />
        <%= f.text_field :upper_rank %>
      </li>
    </ul>
  </div>
  <div class="formcolumn">
    <ul class="form">
      <li><%= f.check_box :looking_for_gm %><%= f.label :looking_for_gm, "Looking for a Co-GM" %></li>
      <li>
        <%= f.label :applicationgamesmaster_ids, "Additional Gamesmasters" %><br />
        <%= f.collection_select :applicationgamesmaster_ids, User.order(:name).select{|user| (user.deleted_at.nil? && (user.is_normal? || user.is_recent?))}, :id, :name, { :selected => @game_application.applicationgamesmaster_ids }, { :multiple => true, :name => 'game_application[applicationgamesmaster_ids][]' } %>
      </li>
    </ul>
  </div>
</div>

<% end %>
